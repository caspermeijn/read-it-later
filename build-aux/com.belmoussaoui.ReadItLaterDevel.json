{
    "app-id": "com.belmoussaoui.ReadItLaterDevel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "read-it-later",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Devel)",
    "finish-args": [
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.secrets"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": ["--share=network"],
        "env": {
            "RUSTFLAGS": "--remap-path-prefix =../",
            "CARGO_HOME": "/run/build/read-it-later/cargo",
            "RUST_BACKTRACE": "full",
            "RUST_LOG": "read_it_later=info"
        }
    },
    "modules": [
        {
            "name": "read-it-later",
            "buildsystem": "meson",
            "config-opts": ["-Dprofile=development"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/read-it-later.git"
                }
            ]
        }
    ]
}
