<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.1"/>
  <object class="AdwClamp" id="articles_list">
    <property name="maximum-size">800</property>
    <child>
      <object class="GtkStack" id="stack">
        <property name="hhomogeneous">False</property>
        <property name="vhomogeneous">False</property>
        <property name="transition-duration">150</property>
        <property name="transition-type">slide-left-right</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">articles</property>
            <property name="child">
              <object class="GtkListBox" id="articles_listbox">
                <property name="valign">start</property>
                <property name="selection-mode">none</property>
                <style>
                  <class name="transparent"/>
                  <class name="articles-list"/>
                </style>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="AdwStatusPage" id="empty_status">
                <property name="icon-name">dialog-missing-symbolic</property>
                <property name="title" translatable="yes">Pretty clean!</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
