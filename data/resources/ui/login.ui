<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.1"/>
  <object class="AdwClamp" id="login">
    <property name="maximum-size">450</property>
    <child>
      <object class="GtkBox">
        <property name="valign">center</property>
        <property name="margin-start">18</property>
        <property name="margin-end">18</property>
        <property name="margin-top">18</property>
        <property name="margin-bottom">18</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkImage" id="icon">
                <property name="pixel-size">128</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Welcome to Read It Later</property>
                <property name="justify">center</property>
                <property name="wrap">True</property>
                <style>
                  <class name="title-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Please sign in using your Wallabag instance information</property>
                <property name="justify">center</property>
                <property name="wrap">True</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="margin-top">30</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Instance URL</property>
                <property name="activatable-widget">instance_entry</property>
                <child>
                  <object class="GtkEntry" id="instance_entry">
                    <property name="valign">center</property>
                    <property name="activates-default">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Client ID</property>
                <property name="activatable-widget">client_id_entry</property>
                <child>
                  <object class="GtkEntry" id="client_id_entry">
                    <property name="valign">center</property>
                    <property name="activates-default">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Client Secret</property>
                <property name="activatable-widget">client_secret_entry</property>
                <child>
                  <object class="GtkEntry" id="client_secret_entry">
                    <property name="valign">center</property>
                    <property name="visibility">False</property>
                    <property name="input-purpose">password</property>
                    <property name="activates-default">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">User Name</property>
                <property name="activatable-widget">username_entry</property>
                <child>
                  <object class="GtkEntry" id="username_entry">
                    <property name="valign">center</property>
                    <property name="activates-default">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Password</property>
                <property name="activatable-widget">password_entry</property>
                <child>
                  <object class="GtkEntry" id="password_entry">
                    <property name="valign">center</property>
                    <property name="visibility">False</property>
                    <property name="input-purpose">password</property>
                    <property name="activates-default">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="login_button">
            <property name="margin-top">24</property>
            <property name="label" translatable="yes">Log In</property>
            <property name="width-request">110</property>
            <property name="height-request">36</property>
            <property name="receives-default">True</property>
            <property name="halign">end</property>
            <property name="valign">start</property>
            <style>
              <class name="suggested-action"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
